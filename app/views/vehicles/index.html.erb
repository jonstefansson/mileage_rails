<h2>Vehicles</h2>

<table class="table table-hover list-action-table">
  <tbody>
    <% @vehicles.each do |vehicle| %>
      <tr>
        <td class="list-action-label"><%= vehicle.name %></td>
        <td>
          <div class="btn-group">
            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">Action <span class="caret"></span></button>
            <ul class="dropdown-menu" role="menu">
              <li><%= link_to 'Fillups', vehicle_fillups_path(vehicle) %></li>
              <li><%= link_to 'Show', vehicle %></li>
              <li><%= link_to 'Edit', edit_vehicle_path(vehicle) %></li>
              <li><%= link_to 'Destroy', vehicle, method: :delete, data: { confirm: 'Are you sure?' } %></li>
            </ul>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Vehicle', new_vehicle_path, class: "btn btn-primary active", role: "button" %>
