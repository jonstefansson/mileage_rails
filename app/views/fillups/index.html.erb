<h2><%= @vehicle.name %> Fillups</h2>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Odometer</th>
      <th>Fill date</th>
      <th>MPG</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fillups.each do |fillup| %>
      <tr>
        <td><%= fillup.odometer %></td>
        <td><%= fillup.fill_date %></td>
        <td><%= number_with_precision(fillup.mpg) if fillup.mpg %></td>
        <td>
          <div class="btn-group">
            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">Action <span class="caret"></span></button>
            <ul class="dropdown-menu" role="menu">
              <li><%= link_to 'Show', vehicle_fillup_path(@vehicle.id, fillup) %></li>
              <li><%= link_to 'Edit', edit_vehicle_fillup_path(@vehicle.id, fillup) %></li>
              <li><%= link_to 'Destroy', fillup, method: :delete, data: { confirm: 'Are you sure?' } %></li>
            </ul>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Fillup', new_vehicle_fillup_path(@vehicle.id), class: "btn btn-primary active", role: "button" %>
